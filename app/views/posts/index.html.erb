<div class="row-fluid">
  <div class="span2"> </div>
  <div class="span8">
    <br/><br/></br>
    <h1>Welcome to Pangolin</h1>
    <br/></br>
    <ul class="nav nav-tabs">
      <li class="active">
        <a href="#">All User</a>
      </li>
      <% @subscribe_groups.each do |group| %>
      <li><a href="<%= group.id %>"><%= group.name %></a></li>
      <% end %>
      <span class="badge badge-info" style="position: relative; top: 8px; background-color: #BBDCEC;">
        <%= link_to '+', new_subscribe_group_path, :style => 'color:white;' %>
      </span>
    </ul>
      <% @posts.each do |post| %>
      <div class="row-fluid">
          <div class="span1"><%= post.user.name %> <%= image_tag post.user.image_url %></div>
          <div class="span8"><div class="well"><blockquote><%= post.content %></div></blockquote></div>
          <div class="span1"><%= link_to 'Show', post %></div>
          <div class="span1"><%= link_to 'Edit', edit_post_path(post) %></div>
          <div class="span1"><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></div>
      </div>
      <% end %>
    
    <br />

    <%= link_to 'New Post', new_post_path %>
  </div>
</div>