<h1>User Login</h1>
<% if @login.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@login.errors.count, "error") %> prohibited this login:</h2>

  <ul>
  <% @login.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>
<%= form_tag('/logins', :method => :post) do %>
	<%= label_tag('name', 'User Name:') %>
	<%= text_field_tag('user[name]') %>
	<%= label_tag('pwd', 'Password:') %>
	<%= password_field_tag('user[pwd]') %>
	<%= submit_tag('Login') %>
<% end %>

<%= link_to 'Back', logins_path %>
